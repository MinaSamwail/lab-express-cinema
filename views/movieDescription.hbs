<div>
    {{#each findMovie}}
    <div>
        <img src="{{this.image}}" alt="{{this.name}}">
        <div>
            <h1>{{this.title}}</h1>
            <h2>{{this.director}}</h2>
            <p>{{this.star}}</p>
            <p>{{this.description}}</p>
            <p>{{this.showtimes}}</p>
        </div>
    </div>
    {{/each}}
</div>